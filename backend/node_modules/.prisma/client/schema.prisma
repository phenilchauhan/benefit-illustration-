generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  dob       DateTime
  mobile    String
  createdAt DateTime @default(now())

  // Relation: One User → Many Policies
  policies Policy[]
}

model Policy {
  id         Int    @id @default(autoincrement())
  policyType String
  premium    Float
  age        Int

  // Relation to User
  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  // Relation: One Policy → Many Riders
  riders Rider[]
}

model Rider {
  id   Int    @id @default(autoincrement())
  name String
  cost Float

  // Relation to Policy
  policy   Policy @relation(fields: [policyId], references: [id])
  policyId Int
}
